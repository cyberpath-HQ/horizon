# =============================================================================
# Horizon Development Environment Configuration
# =============================================================================
# Copy this file to .env and modify the values for your environment
# WARNING: Never commit .env to version control!
# =============================================================================

# =============================================================================
# Application Configuration
# =============================================================================

# Application name
APP_NAME="Cyberpath Horizon"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000

# Rust logging level (debug, info, warn, error)
RUST_LOG=debug

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================

# Database host (use service name in docker-compose)
HORIZON_DATABASE_HOST=localhost
HORIZON_DATABASE_PORT=5432
HORIZON_DATABASE_NAME=horizon
HORIZON_DATABASE_USER=horizon
HORIZON_DATABASE_PASSWORD=horizon_secret_password_change_in_production

# SSL mode for PostgreSQL connection (disable, prefer, require, verify-ca, verify-full)
HORIZON_DATABASE_SSL_MODE=require

# Database connection pool size
HORIZON_DATABASE_POOL_SIZE=10

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis host (use service name in docker-compose)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis database number (0-15)
REDIS_DB=0

# Redis connection pool settings
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10

# =============================================================================
# Authentication Configuration
# =============================================================================

# JWT Secret - IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-token
-key-change-in-productionJWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# TOTP MFA Configuration
TOTP_ISSUER=Cyberpath Horizon
TOTP_DIGITS=6
TOTP_PERIOD=30

# =============================================================================
# Encryption Configuration
# =============================================================================

# Master encryption key - CRITICAL: Store securely in production!
# This key is used for encrypting sensitive data at rest
ENCRYPTION_MASTER_KEY=your-32-byte-master-key-here

# =============================================================================
# API Configuration
# =============================================================================

# API rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# API CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:1420
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# Agent Configuration
# =============================================================================

# Agent registration settings
AGENT_REGISTRATION_ENABLED=true
AGENT_AUTO_APPROVE=false

# Agent TLS certificate settings
AGENT_CERT_DAYS=365
AGENT_CERT_RENEWAL_DAYS=30

# =============================================================================
# Notification Configuration
# =============================================================================

# Email settings (configure SMTP for production)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@horizon.local

# Webhook settings
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5

# =============================================================================
# AI Provider Configuration
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# GitHub Copilot Configuration
COPILOT_API_KEY=
COPILOT_MODEL=

# =============================================================================
# Web UI Configuration
# =============================================================================

# Web UI port (for development server)
WEB_PORT=1420

# Desktop/Tauri configuration
TAURI_DEV_PATH=http://localhost:1420

# =============================================================================
# Logging Configuration
# =============================================================================

# Log format (json, pretty)
LOG_FORMAT=pretty

# Log output (stdout, file)
LOG_OUTPUT=stdout

# Log file path (when LOG_OUTPUT=file)
LOG_FILE_PATH=./logs/horizon.log

# =============================================================================
# Development Helper Settings
# =============================================================================

# Enable seed data on first run
SEED_DATA=true

# Enable database migrations on startup
RUN_MIGRATIONS=true

# Enable debug endpoints
ENABLE_DEBUG_ENDPOINTS=true
